<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Invoices</h1>
</div>

<div class="container"> 
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Item</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Taxrate</th>
          <th>Amount</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @invoices.each do |invoice| %>
          <tr>
            <td><%= invoice.item %></td>
            <td><%= invoice.quantity %></td>
            <td><%= invoice.price %></td>
            <td><%= invoice.taxrate %></td>
            <td><%= invoice.amount %></td>
            <td><%= link_to 'Show', invoice ,class: "btn btn-success"%></td>
            <td><%= link_to 'Edit', edit_invoice_path(invoice),class: "btn btn-info" %></td>
            <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
<br>

<div class="container">
  <%= link_to 'New Invoice', new_invoice_path ,class: "btn btn-default" %>
</div>

